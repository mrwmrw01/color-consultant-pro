# Database
DATABASE_URL="postgresql://user:password@host:5432/database"

# NextAuth (Authentication)
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"
# Production: NEXTAUTH_URL="https://app.colorgurudesign.com"

# AWS S3 (Photo Storage)
AWS_BUCKET_NAME="your-bucket-name"
AWS_FOLDER_PREFIX="your-prefix/"
# AWS credentials (via environment or IAM role)
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"

# Redis (Rate Limiting & Caching)
REDIS_URL="redis://localhost:6379"

# Anthropic AI (Ralph Wiggum Suggestions)
ANTHROPIC_API_KEY="sk-ant-your-api-key-here"

# Cost Controls
MONTHLY_COST_LIMIT=500  # Hard limit in USD
DAILY_COST_LIMIT=20     # Daily alert threshold in USD
ENABLE_CIRCUIT_BREAKER=true  # Auto-disable features when limit exceeded

# Rate Limiting (requests per time period)
RATE_LIMIT_API=100              # General API: 100/minute
RATE_LIMIT_UPLOAD=20            # Uploads: 20/hour
RATE_LIMIT_SYNOPSIS=10          # Synopsis: 10/hour
RATE_LIMIT_AI_SUGGESTIONS=30    # AI: 30/hour
RATE_LIMIT_PRESIGNED_URL=500    # URLs: 500/hour
RATE_LIMIT_ANNOTATION=200       # Annotations: 200/hour

# User Tiers (AI Budget)
# Free tier: $5/month (~6K Haiku requests)
# Pro tier: $50/month
# Enterprise: $500/month
AI_BUDGET_FREE=5
AI_BUDGET_PRO=50
AI_BUDGET_ENTERPRISE=500
DEFAULT_USER_TIER="free"

# Image Optimization
IMAGE_QUALITY=85                # 1-100, default 85
MAX_IMAGE_DIMENSION=2048        # Max width/height
ENABLE_IMAGE_COMPRESSION=true   # Auto-compress uploads
GENERATE_THUMBNAILS=true        # Auto-generate thumbnails

# S3 URL Caching
ENABLE_URL_CACHING=true         # Cache presigned URLs
URL_CACHE_SIZE=2000             # Max cached URLs
URL_CACHE_TTL=3000000           # TTL in ms (50 minutes)

# Feature Flags
FEATURE_AI_SUGGESTIONS=true     # Enable Ralph Wiggum
FEATURE_COST_MONITORING=true    # Enable cost dashboard
FEATURE_RATE_LIMITING=true      # Enable rate limiting

# Alerts (Optional)
ALERT_EMAIL="admin@example.com"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Development
NODE_ENV="development"  # development | production | test
LOG_LEVEL="info"        # error | warn | info | debug
